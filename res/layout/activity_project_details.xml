<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   style="@style/body"
   >

  <!-- call to action -->
  <Button
     android:id="@+id/btnDonate"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:layout_alignParentBottom="true"
     android:text="@string/cta_donate"
     style="@style/button_donate"
     />

  <!-- Android supports crappy layout too, using TableLayout -->
  <TableLayout
     android:id="@+id/tlDetails"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentTop="true"
     android:layout_alignParentLeft="true"
     >

    <TableRow android:layout_gravity="left">
      <TextView
         android:id="@+id/tvTypeLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="8dp"
         android:text="@string/label_project_type"
         style="@style/detail_label"
         />
      <TextView
         android:id="@+id/tvTypeName"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="16dp"
         style="@style/detail_value"
         />
    </TableRow>

    <TableRow android:layout_gravity="left">
      <TextView
         android:id="@+id/tvFocusLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="8dp"
         android:text="@string/label_project_focus"
         style="@style/detail_label"
         />
      <TextView
         android:id="@+id/tvFocus"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="16dp"
         style="@style/detail_value"
         />
    </TableRow>
    <TableRow android:layout_gravity="left">
      <TextView
         android:id="@+id/tvSecondFocusLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="8dp"
         android:text="@string/label_project_2nd_focus"
         style="@style/detail_label"
         />
      <TextView
         android:id="@+id/tvSecondFocus"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="16dp"
         style="@style/detail_value"
         />
    </TableRow>
    <TableRow android:layout_gravity="left">
      <TextView
         android:id="@+id/tvChapterLabel"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="8dp"
         android:text="@string/label_project_chapter"
         style="@style/detail_label"
         />
      <TextView
         android:id="@+id/tvChapter"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="4dp"
         android:layout_marginLeft="16dp"
         style="@style/detail_value"
         />
    </TableRow>
  </TableLayout>

  <TextView
     android:id="@+id/tvFundsLabel"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/tlDetails"
     android:layout_alignParentLeft="true"
     android:layout_marginTop="4dp"
     android:layout_marginLeft="8dp"
     android:text="@string/label_project_funds"
     style="@style/detail_label"
     />
  <TextView
     android:id="@+id/tvFunds"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/tlDetails"
     android:layout_toRightOf="@id/tvFundsLabel"
     android:layout_marginTop="4dp"
     android:layout_marginLeft="16dp"
     style="@style/detail_value"
     />

  <TextView
     android:id="@+id/tvAreaLabel"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/tlDetails"
     android:layout_centerHorizontal="true"
     android:layout_toRightOf="@id/tvFunds"
     android:layout_marginTop="4dp"
     android:layout_marginLeft="32dp"
     android:text="@string/label_project_area"
     style="@style/detail_label"
     />
  <TextView
     android:id="@+id/tvArea"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/tlDetails"
     android:layout_toRightOf="@id/tvAreaLabel"
     android:layout_marginTop="4dp"
     android:layout_marginLeft="16dp"
     style="@style/detail_value"
     />

  <TextView
     android:id="@+id/tvDescriptionLabel"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/tvFunds"
     android:layout_alignParentLeft="true"
     android:layout_marginTop="4dp"
     android:layout_marginLeft="8dp"
     android:text="@string/label_project_description"
     style="@style/detail_label"
     />

  <ScrollView
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_below="@id/tvDescriptionLabel"
     android:layout_alignParentLeft="true"
     android:layout_alignParentRight="true"
     android:layout_above="@id/btnDonate"
     >
    <WebView
       android:id="@+id/tvDescription"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="4dp"
       android:layout_marginLeft="8dp"
       style="@style/detail_value"
       />
  </ScrollView>
  
</RelativeLayout>
