<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <item
     android:right="-88dp"
     android:bottom="-68dp"
     android:id="@+id/drRespondSlotBg"
     >
    <rotate
       android:fromDegrees="45"
       android:toDegrees="45"
       android:pivotX="0%"
       android:pivotY="50%"
       >
      <shape android:shape="rectangle"
             >
        <size android:width="136dp" android:height="136dp"/>
        <solid android:color="@color/peru" />
      </shape>
    </rotate>
  </item>

  <item
     android:left="16dp"
     android:top="25dp"
     android:right="24dp"
     android:bottom="5dp"
     android:id="@+id/drRespondSlot"
     >
    <rotate
       android:fromDegrees="45"
       android:toDegrees="45"
       android:pivotX="0%"
       android:pivotY="100%"
       >
      <shape android:shape="rectangle"
             >
        <stroke android:color="#7f000000" android:width="4dp"/>
      </shape>
    </rotate>
  </item>

</layer-list>
