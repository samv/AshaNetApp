<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.ashanet"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
       android:allowBackup="true"
       android:name="org.ashanet.AshaNetApp"
       android:label="@string/app_name"
       android:theme="@style/AppTheme"
       android:icon="@drawable/asha_icon"
       >
        <activity android:name="org.ashanet.activity.MainActivity"
                  android:label="@string/title_projects"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.ashanet.activity.ProjectDetailsActivity"
                  android:label="@string/title_project_details"
                  >
        </activity>
        <activity android:name="org.ashanet.activity.EventDetailsActivity"
                  android:label="@string/title_event_details"
                  >
        </activity>
    </application>
</manifest>
